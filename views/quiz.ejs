<link rel="stylesheet" href="/css/style.css">

<div class="container mt-5" style="padding-left:30px; padding-right:30px">
  <h1>Quesions</h1>
  <div class="ques">
  <p class="btn btn-lg btn-danger hidden" id="demo">10</p>
  <form action="/result" method="post">
          <div class="progress"  style="margin-bottom:20px">
          <div id="prog" class="progress-bar bg-warning" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <%ques.forEach((q) => {%>
            <div class="hidden" id=<%=ques.indexOf(q)%>>
            <h4 style="margin-bottom:20px"><%=ques.indexOf(q)+1%>. <%=decodeURIComponent(q.question)%></h4>
            <input type="radio" name="<%=ques.indexOf(q)%>" value="<%=decodeURIComponent(q.correct_answer)%>" id=<%=ques.indexOf(q)+"1"%>>
            <label for=<%=ques.indexOf(q)+"1"%>><%=decodeURIComponent(q.correct_answer)%></label>
            <input type="radio" name="<%=ques.indexOf(q)%>" value="<%=decodeURIComponent(q.incorrect_answers[0])%>" id=<%=ques.indexOf(q)+"2"%>>
            <label for=<%=ques.indexOf(q)+"2"%>><%=decodeURIComponent(q.incorrect_answers[0])%></label>
            <input type="radio" name="<%=ques.indexOf(q)%>" value="<%=decodeURIComponent(q.incorrect_answers[1])%>" id=<%=ques.indexOf(q)+"3"%>>
            <label for=<%=ques.indexOf(q)+"3"%>><%=decodeURIComponent(q.incorrect_answers[1])%></label>
            <input type="radio" name="<%=ques.indexOf(q)%>" value="<%=decodeURIComponent(q.incorrect_answers[2])%>" id=<%=ques.indexOf(q)+"4"%>>
            <label for=<%=ques.indexOf(q)+"4"%>><%=decodeURIComponent(q.incorrect_answers[2])%></label>
            </div>
          <%})%>
        <input id="myCheck" class="btn btn-primary hidden" type="submit" value="Submit">
  </form>
  </div>
</div>



<script type="text/javascript">
  var i=0;
  var t=9;
  document.getElementById(i).classList.remove("hidden");
  setInterval(function(){
    if(t==0){
      t=10;
    }
    document.getElementById("demo").innerHTML=t;
    document.getElementById("prog").style.width=t*10+"%";
    t--;
  },1000);

  setInterval(function(){
    if(i==5){
      document.getElementById("myCheck").click();
    }

     document.getElementById(i).classList.add("hidden");
     i++;
     document.getElementById(i).classList.remove("hidden");
     console.log(i);
   }, 10000);
</script>



